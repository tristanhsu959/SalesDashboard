/* Navbar */
header.top-nav {
	--nav-bg-color: #01579b;
	
	position: sticky;
	top: 0;
	z-index: 5;
	width: 100%;
	height: 64px;
	border-bottom: 1px solid rgba(0 0 0 / .20);
	background-color: var(--nav-bg-color);
	box-sizing: border-box;
	
	a.nav-back i {
		color: #fafafa;
	}
	
	.nav-breadcrumb {
		display: flex;
		font-weight: 500;
		color: #b3e5fc;
		font-size: 1rem;
	}
	
	/* 共用的style */
	.btn-home, .btn-profile {
		display: flex;
		color: rgba(255, 255, 255, .7);
		background-color: #37474f;
			
		i {
			font-size: 22px;
		}
		&:hover {
			color: #fafafa;
			background-color: #e65100;
		}
	}
}

